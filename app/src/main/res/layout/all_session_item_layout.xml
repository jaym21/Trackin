<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clSessionRoot"
    android:background="@color/black_light"
    android:layout_marginHorizontal="16dp"
    android:layout_marginTop="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivSessionImage"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginStart="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_date"
                    app:tint="@color/green"/>

                <TextView
                    android:id="@+id/tvSessionDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Jun 01,2022"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:fontFamily="@font/avenir_medium"
                    android:layout_marginStart="10dp"
                    android:layout_gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_runner"
                    app:tint="@color/red"/>

                <TextView
                    android:id="@+id/tvSessionDistance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="3 km"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:fontFamily="@font/avenir_medium"
                    android:layout_marginStart="10dp"
                    android:layout_gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_flash"
                    app:tint="@color/blue"/>

                <TextView
                    android:id="@+id/tvSessionAverageSpeed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="24.6 km/h"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:fontFamily="@font/avenir_medium"
                    android:layout_marginStart="10dp"
                    android:layout_gravity="center"/>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

