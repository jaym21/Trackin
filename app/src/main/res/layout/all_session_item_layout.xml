<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clSessionRoot"
    android:layout_marginHorizontal="16dp"
    android:layout_marginTop="20dp">

    <ImageView
        android:id="@+id/ivSessionImage"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="?attr/bg_color_light"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/ic_date"
                app:tint="@color/green"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/tvSessionDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Jun 01,2022"
                android:textColor="?attr/text_color"
                android:textSize="14sp"
                android:fontFamily="@font/avenir_medium"
                android:layout_marginStart="10dp"
                android:layout_gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/ic_runner"
                app:tint="@color/red"/>

            <TextView
                android:id="@+id/tvSessionDistance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="3 km"
                android:textColor="?attr/text_color"
                android:textSize="14sp"
                android:fontFamily="@font/avenir_medium"
                android:layout_marginStart="10dp"
                android:layout_gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/ic_flash"
                app:tint="@color/blue"/>

            <TextView
                android:id="@+id/tvSessionAverageSpeed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="24.6 km/h"
                android:textColor="?attr/text_color"
                android:textSize="14sp"
                android:fontFamily="@font/avenir_medium"
                android:layout_marginStart="10dp"
                android:layout_gravity="center"/>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>