<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black_bg"
    android:padding="16dp">
    
    <TextView
        android:id="@+id/tvDialogTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/permissions_required"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:fontFamily="@font/avenir_semibold"
        app:layout_constraintTop_toTopOf="parent" />
    
    <TextView
        android:id="@+id/tvDialogBody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/this_app_may_not_work_correctly_without_the_requested_permissions_open_the_app_settings_to_modify_app_permissions_set_location_permission_to_allow_all_the_time"
        android:textSize="14sp"
        android:textColor="@color/white_alpha_85"
        android:fontFamily="@font/avenir_medium"
        app:layout_constraintTop_toBottomOf="@id/tvDialogTitle"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/tvSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/settings"
        android:textColor="@color/blue_500"
        android:fontFamily="@font/avenir_semibold"
        app:layout_constraintTop_toBottomOf="@id/tvDialogBody"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp" />

</androidx.constraintlayout.widget.ConstraintLayout>